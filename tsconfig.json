{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "target": "ES2019",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["tests", "dist", "examples"]
}
